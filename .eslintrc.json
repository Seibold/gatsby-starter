{
  "root": true,
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "settings": {
    "import/core-modules": ["gatsby"]
  },
  "plugins": ["json"],
  "env": {
    "jest": true
  },
  "globals": {
    "graphql": true,
    "page": true,
    "browser": true,
    "context": true,
    "jestPuppeteer": true
  },
  "rules": {
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ]
  }
}
